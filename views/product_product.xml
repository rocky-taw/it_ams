<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_product_form_it_asset" model="ir.ui.view">
        <field name="name">view.product.product.form.it.asset</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active']" position="after">
                <field name="isAsset" groups="it_ams.group_it_ams_manager"/>
            </xpath>
        </field>
    </record>
</odoo>
